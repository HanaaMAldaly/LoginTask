<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_enabled="true">
        <shape>
            <corners android:radius="@dimen/dimen_10dp" />
            <gradient android:angle="90" android:endColor="@color/light_orange" android:startColor="@color/dark_orange" android:type="linear" />
        </shape>

    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/dimen_10dp" />
            <gradient android:angle="90" android:endColor="@color/disable_orange" android:startColor="@color/disable_orange" android:type="linear" />
        </shape>
    </item>
</selector>